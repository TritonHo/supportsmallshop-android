<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="420dp"
    android:background="@drawable/popup_b" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/select_reject"
            android:textColor="@android:color/black"
            android:textSize="28dp" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="96.8dp"
            android:layout_height="29.2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/button_4w_dimmed"
            android:enabled="false"
            android:text="@string/confirm"
            android:textColor="@color/button_dim_text_color"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/reject_reason_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/confirm_button"
            android:layout_below="@+id/title"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
        </RadioGroup>
    </RelativeLayout>

</RelativeLayout>