                        android:gravity="top|left"
                        android:hint="@string/shop_name_hint"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18dp" >
                    </EditText>
                </RelativeLayout>
            </LinearLayout>

